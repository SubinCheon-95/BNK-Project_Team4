<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.busanbank.mapper.CsMapper">

    <!-- ===================== FAQ 목록 조회 ===================== -->
    <select id="selectFaqList"
            parameterType="kr.co.busanbank.dto.PageRequestDTO"
            resultType="kr.co.busanbank.dto.FaqDTO">

        SELECT
        faqId,
        groupCode,
        faqCategory,
        question,
        answer,
        createdAt,
        updatedAt,
        status
        FROM faq
        <where>

            <!--  검색어가 있을 때: 카테고리 상관없이 전체에서 검색 -->
            <if test="keyword != null and keyword != ''">
                <choose>
                    <!-- 질문만 검색 -->
                    <when test="searchType == 'question'">
                        AND question LIKE '%' || #{keyword} || '%'
                    </when>

                    <!-- 답변만 검색 -->
                    <when test="searchType == 'answer'">
                        AND answer LIKE '%' || #{keyword} || '%'
                    </when>

                    <!-- 질문 + 답변 검색 -->
                    <when test="searchType == 'qa'">
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </when>

                    <!-- 그 외: 기본은 질문+답변 검색 -->
                    <otherwise>
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </otherwise>
                </choose>
            </if>

            <!--  검색어가 없을 때만 카테고리 필터 적용 (TOP은 cate 없음) -->
            <if test="(keyword == null or keyword == '') 
                      and cate != null and cate != ''">
                AND faqCategory = #{cate}
            </if>

            <!--  사용중인 FAQ만 -->
            <if test="true">
                AND status = 'Y'
            </if>

        </where>

        <!--  정렬: 기본 = 최신순 -->
        ORDER BY faqId DESC

        <choose>
            <!-- TOP: cate 없음 + keyword 없음 → 최신 10개 -->
            <when test="(keyword == null or keyword == '')
                    and (cate == null or cate == '')">
                OFFSET 0 ROWS
                FETCH NEXT 10 ROWS ONLY
            </when>

            <!-- 카테고리 목록 / 검색 결과: 기존 페이징 -->
            <otherwise>
                OFFSET #{offset} ROWS
                FETCH NEXT #{size} ROWS ONLY
            </otherwise>
        </choose>
    </select>


    <!-- ===================== FAQ 총 갯수 ===================== -->
    <select id="selectFaqTotal"
            parameterType="kr.co.busanbank.dto.PageRequestDTO"
            resultType="int">

        SELECT COUNT(*)
        FROM faq
        <where>

            <!--  검색어 있을 때: 목록과 동일한 조건 -->
            <if test="keyword != null and keyword != ''">
                <choose>
                    <when test="searchType == 'question'">
                        AND question LIKE '%' || #{keyword} || '%'
                    </when>
                    <when test="searchType == 'answer'">
                        AND answer LIKE '%' || #{keyword} || '%'
                    </when>
                    <when test="searchType == 'qa'">
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </when>
                    <otherwise>
                        AND (question LIKE '%' || #{keyword} || '%'
                        OR  answer   LIKE '%' || #{keyword} || '%')
                    </otherwise>
                </choose>
            </if>

            <!--  검색어 없을 때만 cate 필터 -->
            <if test="(keyword == null or keyword == '') 
                      and cate != null and cate != ''">
                AND faqCategory = #{cate}
            </if>

            <!--  STATUS = 'Y' -->
            <if test="true">
                AND status = 'Y'
            </if>

        </where>
    </select>


    <!-- ===================== FAQ 카테고리 코드 목록 ===================== -->
    <select id="selectFaqCategories"
            resultType="kr.co.busanbank.dto.CodeDetailDTO">

        SELECT
            groupCode,
            code,
            codeName
        FROM CODEDETAIL
        WHERE GROUPCODE = 'FAQ_TYPE'
          AND USEYN    = 'Y'
          AND STATUS   = 'Y'
        ORDER BY TO_NUMBER(CODE)
    </select>

</mapper>
